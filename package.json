{
  "name": "pen-stack-starter",
  "version": "1.0.0",
  "description": "a side project - yelp for algerians",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/index.js",
    "watch:ts": "tsc -w",
    "watch:js": "nodemon dist/index.js",
    "watch:all": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:js\"",
    "watch:test": "npm run test -- --watchAll",
    "build": "tsc",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test": "cross-env NODE_ENV=test jest --watchAll --detectOpenHandles"
  },
  "dependencies": {
    "@types/jest": "^27.0.3",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "html-to-text": "^8.1.0",
    "i": "^0.3.7",
    "jest": "^27.3.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "mailgun.js": "^3.7.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.1",
    "nodemailer-mailgun-transport": "^2.1.3",
    "npm": "^8.1.4",
    "pg": "^8.7.1",
    "pug": "^3.0.2",
    "typeorm": "^0.2.40"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/html-to-text": "^8.0.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.7",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-mailgun-transport": "^1.4.3",
    "@types/pug": "^2.0.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "form-data": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
